{
  "name": "flyx2.0",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build",
    "build:analyze": "ANALYZE=true bun --bun next build",
    "start": "bun --bun next start",
    "lint": "next lint",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit",
    "check-env": "node scripts/check-env.js",
    "db:init": "bun run server/db/init.ts",
    "db:migrate": "bun run server/db/manage.ts migrate",
    "db:status": "bun run server/db/manage.ts status",
    "db:rollback": "bun run server/db/manage.ts rollback",
    "db:optimize": "bun run server/db/manage.ts optimize",
    "db:stats": "bun run server/db/manage.ts stats",
    "db:health": "bun run server/db/manage.ts health",
    "db:cleanup": "bun run server/db/manage.ts cleanup",
    "admin:create": "bun scripts/create-admin.js",
    "analytics:init": "bun scripts/init-analytics.js"
  },
  "dependencies": {
    "bcryptjs": "3.0.3",
    "framer-motion": "^12.23.12",
    "hls.js": "^1.6.10",
    "jsonwebtoken": "9.0.2",
    "lucide-react": "^0.542.0",
    "nanoid": "^5.0.4",
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.6.6",
    "react-world-flags": "^1.6.0",
    "recharts": "3.3.0",
    "zod": "4.1.12",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "3.0.0",
    "@types/bun": "1.3.1",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8",
    "eslint-config-next": "14.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!app/**/*.d.ts",
      "!app/**/node_modules/**"
    ]
  }
}
